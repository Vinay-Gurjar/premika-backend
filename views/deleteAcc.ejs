<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" type="text/css" href="../public/styles/main.css">  -->

    <link rel="stylesheet" href="./styles/main.css">
    <link rel="stylesheet" href="/styles/deleteAcc.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css?family=Poppins&display=swap" rel="stylesheet">
    <title>Delete Account</title>
</head>
<body >
     <div style="display: flex; flex-direction: column; min-height: 100vh; ">
            <%- include("./partials/navbar.ejs") %>
            <div style="flex-grow: 1;" class="main-div">
                <div id="delete-form" style="margin-top: 150px; ">
                    <form id="user-info">
                        <!-- <input class="input-form" type="email" id="tel" class="user-info-input" name="tel" placeholder="Enter Your Email"  minlength="5"  required/> -->
                        <input class="input-form" type="text" id="reason" class="user-info-input" placeholder="Please enter your reason." name="reason" minlength="5" maxlength="500" required/>
                        <!-- <input class="input-form" type="text" placeholder="Enter Otp" name="otp" required="true" disabled  id="delete"/> -->
                        <button type="submit" class="otp-btn" id="continue-btn">Continue</button>
                    </form>
                </div>
                
            </div>
             <%- include("partials/footer.ejs") %>
    </div>
    <script >
        const url = window.location.origin + "/";
        
        const continueBtn = document.getElementById('continue-btn');
        const reasonInput = document.getElementById('reason');

        continueBtn.addEventListener('click', () => {
            
            const reason = reasonInput.value

            if(!reason || reason.length < 3){
                alert("Please enter reason to continue");
                return;
            }
            window.open(`${url}delete_account?reason=${reason}`, "_blank")
        })
    </script>
</body>
</html>